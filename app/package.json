{
  "name": "graphql-api-server-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for an API server serving GraphQL.",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run dev:watch",
    "start": "node dist/main.js",
    "build": "tsc --removeComments",
    "dev:watch": "nodemon --delay 5 --ext ts --exec node --inspect=127.0.0.1:9339 --require ts-node/register ./src/main.ts",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx} --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "email": "ceottaki@gmail.com",
    "name": "Felipe Ceotto"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/graphql-iso-date": "3.4.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/node": "14.6.0",
    "@types/restify": "8.4.2",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "apollo-boost": "0.4.9",
    "apollo-server-restify": "1.3.6",
    "graphql": "15.3.0",
    "graphql-iso-date": "3.6.1",
    "isomorphic-fetch": "2.2.1",
    "restify": "8.5.1"
  }
}
